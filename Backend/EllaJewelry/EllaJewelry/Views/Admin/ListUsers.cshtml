@using EllaJewelry.Infrastructure.Data.Entities;
@model IEnumerable<User>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["AdminIndex"] = false; 
}

<div class="container">
    <h1 class="text-white text-center mb-3">Users 👤</h1>

    <div class="table-responsive">
        <table class="table table-striped bg-white">
            <thead class="sticky-top">
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


